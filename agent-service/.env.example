# =============================================================================
# BeepLancer Agent Service Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# OpenAI Configuration (for AI-powered task execution)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key

# Alternative: Use other LLM providers
# ANTHROPIC_API_KEY=your_anthropic_key
# GOOGLE_AI_KEY=your_google_key

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port for HTTP mode
PORT=3001

# Transport mode: 'http' or 'stdio'
MCP_TRANSPORT_MODE=http

# -----------------------------------------------------------------------------
# Agent Identity
# -----------------------------------------------------------------------------
# Agent's SUI wallet address (for receiving payments)
AGENT_WALLET_ADDRESS=0x_your_wallet_address

# Agent display name
AGENT_NAME=BeepLancer AI Freelancer

# -----------------------------------------------------------------------------
# Skill Configuration
# -----------------------------------------------------------------------------
# Enable/disable specific skills
ENABLE_CODE_GENERATION=true
ENABLE_CODE_AUDIT=true
ENABLE_TRANSLATION=true
ENABLE_CONTENT_CREATION=true

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# Maximum concurrent tasks
MAX_CONCURRENT_TASKS=3

# Task timeout in minutes
TASK_TIMEOUT_MINUTES=30
