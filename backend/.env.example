# =============================================================================
# BeepLancer Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Beep Pay SDK Configuration
# -----------------------------------------------------------------------------
# Get your API key from the Beep Pay dashboard
BEEP_API_KEY=your_beep_api_key_here

# -----------------------------------------------------------------------------
# Database Configuration  
# -----------------------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:password@localhost:5432/beeplancer

# Individual DB config (alternative to DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=beeplancer

# -----------------------------------------------------------------------------
# SUI Blockchain Configuration
# -----------------------------------------------------------------------------
# Network: testnet, devnet, or mainnet
SUI_NETWORK=testnet

# Escrow contract addresses (get these after publishing the Move contract)
SUI_ESCROW_PACKAGE_ID=0x_your_package_id
SUI_ESCROW_OBJECT_ID=0x_your_escrow_shared_object_id

# Platform wallet for signing transactions
SUI_PRIVATE_KEY=your_private_key_base64

# -----------------------------------------------------------------------------
# MCP Agent Configuration
# -----------------------------------------------------------------------------
# URL where the freelance agent MCP server is running
AGENT_MCP_URL=http://localhost:3001/mcp

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3000
NODE_ENV=development

# CORS allowed origins (comma-separated for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
